<body>

  <div class="header-container">
    <div class="header">

      <div class="left">
        <img src="images/thaparlogo.png" class="thaparlogo" alt="">
      </div>
      <div class="middle">
        <p class="welcome">Welcome to Nava Nalanda Central Library!</p>
      </div>
      <div class="right">
        <div class="bt1">
          <p class="loggedin-text">Welcome Admin!</p>
        </div>

        <div class="bt1">
        
            <form class="" action="/" method="get">
                <button class="b1">Log Out</button>
              </form>
        </div>

      </div>


    </div>

  </div>


<div class="admin-heading-container">
    <h1 class="admin-heading">Admin Panel</h1>
</div>

<div class="table-container">
<table class="table">
    <thead>
        <tr>
            <th scope="col">S.No</th>
            <th scope="col">Description</th>
            <th scope="col">Number of Students</th>
        </tr>
    </thead>

    <tbody>
        <tr>
            <th scope="row">1</th>
            <td>Total Number of Students currently in Library</td>
            <td><%= totalinlibrary %></td>
        </tr>

        <tr>
            <th scope="row">2</th>
            <td>Students present inside for more than 1 hour</td>
            <td><%= insidemorethanone %> </td>
        </tr>
        <tr>
            <th scope="row">3</th>
            <td>First time visitors</td>
            <td><%= firsttime %></td>
        </tr>
        <tr>
            <th scope="row">4</th>
            <td>Total number of registered students</td>
            <td><%= totalregistered %></td>
        </tr>
        
    </tbody>
</table>
</div>

<form action="/admin" method="post">
<div class="search-by-roll-container">
    
      <div class="row g-3 align-items-center">
        <div class="col-auto">
          <label for="" class="col-form-label">Search the last status by Roll number : </label>
        </div>
        <div class="col-auto">
            <input type="number" placeholder="Search by Roll Number" name="roll" class="form-control">            
        </div>
      </div>
    <button class="b1" type="submit">Search</button>
</div>
</form>



<div class="search-results">
<p class="search-results"> <%= laststatus %> </p>
</div>

<div class="footer-container">
    <div class="footer">
  
